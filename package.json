{
  "name": "light-async-queue",
  "version": "2.0.1",
  "description": "Production-ready Redis-free async job queue - BullMQ alternative with file persistence",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "engines": {
    "node": ">=19.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "files": [
    "dist/src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:examples": "tsc --project tsconfig.examples.json",
    "dev": "tsc --watch",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run lint && pnpm test && pnpm run build"
  },
  "keywords": [
    "queue",
    "job",
    "async",
    "worker",
    "task",
    "background",
    "retry",
    "dlq",
    "job-queue",
    "task-queue",
    "background-jobs",
    "redis-free",
    "typescript",
    "bullmq",
    "bull",
    "cron",
    "scheduler",
    "job-dependencies",
    "rate-limiting",
    "webhooks",
    "event-driven",
    "progress-tracking",
    "priority-queue",
    "delayed-jobs",
    "repeating-jobs",
    "dashboard",
    "monitoring",
    "websocket",
    "real-time",
    "ui"
  ],
  "author": "Akshay Gaikwad <gaikwad.akshay79@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaikwadakshay79/light-async-queue.git"
  },
  "bugs": {
    "url": "https://github.com/gaikwadakshay79/light-async-queue/issues"
  },
  "homepage": "https://github.com/gaikwadakshay79/light-async-queue#readme",
  "dependencies": {
    "cron-parser": "^5.5.0",
    "ws": "^8.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
